{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "{{VENV_PYTHON}} {{HOOKS_PATH}}/session_start.py"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "{{VENV_PYTHON}} {{HOOKS_PATH}}/prompt_handler.py"
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "{{HOOKS_PATH}}/pre-tool-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "{{HOOKS_PATH}}/post-file-change.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_MEMORY_COLLECTION": "{{COLLECTION_NAME}}"
  }
}
